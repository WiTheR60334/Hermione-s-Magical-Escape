<%- include("partials/header"); -%>

<section class="payment-hotel" style="margin-top: 100px; color: white; font-size: 2rem;">
  <h2>Hotel Booking Details</h2>
  <p><strong>Name:</strong> <%= booking.customerName %></p>
  <p><strong>Mobile:</strong> <%= booking.mobile %></p>
  <p><strong>Email:</strong> <%= booking.email %></p>
  <p><strong>Number of Members:</strong> <%= booking.numberOfMembers %></p>
  <p><strong>Number of Rooms:</strong> <%= booking.occupiedRooms %></p>
  <p><strong>Check-In Date:</strong> <%= booking.checkInDate %></p>
  <p><strong>Check-Out Date:</strong> <%= booking.checkOutDate %></p>
  <p><strong>Hotel Name:</strong> <%= booking.hotelName %></p>
  <p><strong>Location:</strong> <%= booking.location %></p>
  <p><strong>Rating:</strong> <%= booking.rating %></p>
  <p><strong>Price Per Night:</strong> <%= booking.pricePerNight %></p>
  <p><strong>Amenities:</strong></p>
  <ul>
    <% booking.amenities.split(", ").forEach(function(amenity) { %>
      <li><%= amenity %></li>
    <% }); %>
  </ul>
  <p><strong>Total Available Rooms:</strong> <%= booking.availableRooms %></p>

  <form action="/allhotels/<%= hotelId %>/bookhotel/paypal" method="post">
    <!-- PayPal Integration -->
    <input type="hidden" name="paymentMethod" value="paypal">
    <button type="submit" class="btn btn-primary">Pay with PayPal</button>
  </form>


</section>

<%- include("partials/footer"); -%>