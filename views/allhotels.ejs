<%- include("partials/header", {isHotelPage : false}); -%>
<section class="hotel" id="hotel" style="margin-top: 100px;">
    <div class="heading">
        <span>Our Hotel</span>
        <h1>Make your Hotel</h1>
    </div>

    <div class="box-container">
        <% let animationTime = 100; %>
        <% hotels.forEach(function(hotel, index){ %>
          <div class="box" data-aos="fade-up" data-aos-delay="<%= animationTime %>">
            <div class="image">
              <img src="<%= hotel.firstImg %>" alt="">
              <h3 style="font-size: 2rem; color : white;"><i class="fas fa-map-marker-alt"></i><%= hotel.name %></h3>
            </div>
            <div class="content" style="font-size: 2rem; color : white;">
              <div class="price">$ <%=hotel.pricePerNight%> <span>1499</span></div>   
              <p><%= hotel.firstPara %></p>
              <a href="/allhotels/<%= hotel._id %>">Read More <i class="fas fa-angle-right"></i></a>
            </div>
          </div> 
          <% animationTime += 100; %>
          <% if (index === hotels.length - 1) { %>
            <% animationTime = 100; %>
          <% } %>
        <% }); %>
      </div>
</section>
<%- include("partials/footer"); -%>